<%= simple_form_for @task do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :color %>
    <%= f.input :done %>
    <%= f.input :now %>
    <%#= f.input :project, collection: (@projects || Project.all), label_method: :title, value_method: :id %>

    <%= f.label :project_id %>
