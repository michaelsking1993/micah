<%= simple_form_for @task do |f| %>
    <%= f.input :title %>
    <%= f.input :order_of_importance %>
    <%= f.input :description %>

    <%= f.input :color %>
    <%= f.input :done %>
    <%= f.input :now %>
    <%= f.hidden_field :project_id, value: @task.project_id %>
    <%= f.submit %>
<% end %>